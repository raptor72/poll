{% extends 'poll/base_poll.html' %}

{% block title %}
    {{ poll.title }} - {{ poll.super }}
{% endblock %}

{% block content %}
<h1>
    {{ poll.title }}
</h1>
<p>
    {{ poll.comment }} 
</p>

<p>
    {% for question in poll.questions.all %}
        {{ question.text  }}
        <br>
          {% for answer in question.choice_set.all %}
              {{ answer.text }}
              <br>
          {% endfor %}
        <br>
    {% endfor %}
</p>
{% endblock %}

